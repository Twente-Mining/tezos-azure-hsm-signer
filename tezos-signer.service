[Unit]
Description = Tezos Signer
Wants = network-online.target
After = network-online.target

[Service]
User = deploy
Group = deploy
WorkingDirectory = /home/deploy/tezos-azure-hsm-signer
ExecStart = NODE_ENV='production' AZURE_KEYVAULT_URI='https://tezossigner-keyvault.vault.azure.net/' /usr/bin/node server.js --address=0.0.0.0
Restart = on-failure

[Install]
WantedBy = multi-user.target
